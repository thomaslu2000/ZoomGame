<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corksproductions.SpeederBall.HighScoresActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/HighScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Scores"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="186dp" />

        <TextView
            android:id="@+id/FirstPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="first place"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/SecondPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text="second place"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ThirdPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text="third place"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/FourthPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fourth place"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/FifthPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fifth place"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/SixthPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sixth place"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/SeventhPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="seventh place"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/EighthPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="eighth place"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/NinthPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ninth place"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TenthPlaceScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tenth place"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button3"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:onClick="end"
            android:text="Main Menu"
            android:textSize="12sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
